
<div id="user_cont">
 
  <h2> {UNAME} </h2>
  <h4 id="joindate"> {BDAYUTC} </h4>

  <button class="tablink" onclick="openPage('overview', this, 'grey')"> Overview </button>
  <button class="tablink" onclick="openPage('posts', this, 'grey')"> Posts </button>
  <button class="tablink" onclick="openPage('comments', this, 'grey')"> Comments </button>
  <button class="tablink" onclick="openPage('about', this, 'grey')"> About </button>

  <div id="overview" class="tabcontent">
    <ul>
      <li> {NUM_POINTS} points </li>
      <li> {NUM_POSTS} posts </li>
      <li> {NUM_COMMENTS} comments </li>
    </ul>
  </div>

  <div id="posts" class="tabcontent">
      {POSTS}
  </div>

  <div id="comments" class="tabcontent">
      {COMMENTS}
  </div>

  <div id="about" class="tabcontent">
      <p> {ABOUT} </p>
  </div>

</div>

